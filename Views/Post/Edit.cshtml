@model firstApp.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Post</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Likes" class="control-label"></label>
                <input asp-for="Likes" class="form-control" />
                <span asp-validation-for="Likes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shares" class="control-label"></label>
                <input asp-for="Shares" class="form-control" />
                <span asp-validation-for="Shares" class="text-danger"></span>
            </div>
            <p>Comments</p>
            <ul class="">
                @foreach (var comment in Model.comments)
                {
                    <li >
                        @comment.comment_content
                    </li>
                }
            </ul>
            <div class="form-group">
                <input type="hidden" name="postId" value="@Model.Id" />
                <label for="newComment" class="control-label">Add Comment</label>
                <textarea id="newComment" name="newComment" class="form-control"></textarea>
            </div>
            <div class="form-group mt-2 mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
